@using CQRSCode.Multitenancy
@inject Tenant CurrentTenant
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>CQRS example</h1>
            </div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <hr/>

            <b>Current Tenant:</b> @CurrentTenant.Name

        </footer>
    </div>
</body>
</html>